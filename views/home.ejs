<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h1> Library </h1>
		<form action='/title' method='GET'>
			<div class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'>Title Search:</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='title' name='title' placeholder='Book Title'required>
						<button class='btn btn-primary btn-block'>Search Books By Tittle</button>
				</div>
			</div>
		</form>
		<form action='/year' method='GET'>
			<div class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'>Year Search:</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='year' name='year' placeholder='Year Book Was Published'required>
					<button class='btn btn-primary btn-block'>Search Books By Publishing Year</button>
				</div>
			</div>
		</form>
		<form action='/author' method='GET'>
			<div class='form-group row'>
				<label for='firstname' class='col-sm-4 col-form-label'>Author Search:</label>
				<div class='col-sm-4'>
					<input type='text' class='form-control' id='firstname' name='firstname' placeholder='First Name' required>
					<input type='text' class='form-control' id='lastname' name='lastname' placeholder='Last Name' required>
					<button class='btn btn-primary btn-block'>Search Authors</button>
				</div>
			</div>
		</form>
	</div>
	<a href='/login'><h2>login</h2></a>
	<td><a href='/register'><h2>Register</h2></a></td>
	<div class='row'>
        <%if(!books){%>
            <h1 class='col-sm-12 nofound'>Empty database. Please add the first book!</h1>    
        <%}
        else{%>
        	<table>
        		<tr><th>/Cover/</th><th>/Title/</th><th>/Year/</th><th>Author/</th></tr>
        		<tr><td colspan="4"><hr/></td></tr>
        		<%books.forEach(function(book){%>
            		<tr>
            			<form action='/checkout/<%=book.bookId%>' method='GET'>
            				<td><img src= '<%=book.cover%>'></image></td>
	            			<td><%=book.title%></td>
	            			<td><%=book.year%></td>
	            			<td><%=book.firstName%> <%=book.lastName%></td>
	            			<td><button class='btn btn-primary btn-block'>Checkout</button></td>
            			</form>
            		</tr>
            		<br>
        		<%});%>
        	</table>
        <%}%>
    </div>
</div>
<%- include ('templates/footer'); -%>